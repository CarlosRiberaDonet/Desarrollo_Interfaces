<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Pantalla -->
            <RowDefinition Height="*"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Pantalla -->
        <TextBox Name="Pantalla" FontSize="28" Margin="10" 
                 IsReadOnly="True" HorizontalAlignment="Stretch"/>

        <!-- Teclado -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Fila 1 -->
            <Button Content="MC" Grid.Row="0" Grid.Column="0"/>
            <Button Content="MR" Grid.Row="0" Grid.Column="1"/>
            <Button Content="MS" Grid.Row="0" Grid.Column="2"/>
            <Button Content="M-" Grid.Row="0" Grid.Column="3"/>

            <!-- Fila 2 -->
            <Button Content="←" Grid.Row="1" Grid.Column="0"/>
            <Button Content="CE" Grid.Row="1" Grid.Column="1"/>
            <Button Content="C" Grid.Row="1" Grid.Column="2"/>
            <Button Content="/" Grid.Row="1" Grid.Column="3"/>

            <!-- Fila 3 -->
            <Button Content="7" Grid.Row="2" Grid.Column="0"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2"/>
            <Button Content="*" Grid.Row="2" Grid.Column="3"/>

            <!-- Fila 4 -->
            <Button Content="4" Grid.Row="3" Grid.Column="0"/>
            <Button Content="5" Grid.Row="3" Grid.Column="1"/>
            <Button Content="6" Grid.Row="3" Grid.Column="2"/>
            <Button Content="-" Grid.Row="3" Grid.Column="3"/>

            <!-- Fila 5 -->
            <Button Content="1" Grid.Row="4" Grid.Column="0"/>
            <Button Content="2" Grid.Row="4" Grid.Column="1"/>
            <Button Content="3" Grid.Row="4" Grid.Column="2"/>
            <Button Content="+" Grid.Row="4" Grid.Column="3"/>

            <!-- Fila 6 -->
            <Button Content="0" Grid.Row="5" Grid.Column="0"/>
